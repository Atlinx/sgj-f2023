script/source = "extends CanvasLayer


@onready var player_1 = get_tree().get_first_node_in_group(\"player1\")
@onready var health_1 = player_1.get_node(\"Health\")
@export var health_bar_1 : ProgressBar
@export var label_1 : Label

@onready var player_2 = get_tree().get_first_node_in_group(\"player2\")
@onready var health_2 = player_2.get_node(\"Health\")
@export var health_bar_2 : ProgressBar
@export var label_2 : Label

@onready var game_manager = get_tree().get_first_node_in_group(\"game_manager\")
@export var base_label : Label
@export var gold_label : Label
@export var win_label : Label
@export var wave_label : Label

func _ready():
	health_1.healthchanged.connect(_health_update)
	health_2.healthchanged.connect(_health_update)
	game_manager.base.connect(_base_update)
	game_manager.gold_change.connect(_gold_update)
	game_manager.win.connect(_on_win)
	game_manager.wave_comming.connect(_on_slime_wave)
	_health_update()
	_base_update()
	_gold_update()

func _health_update():
	if is_instance_valid(health_1):
		health_bar_1.value = health_1.health * 100 / health_1.max_health 
		label_1.text = str(health_1.health) +\"/\"+ str(health_1.max_health)
	
	if is_instance_valid(health_2):
		health_bar_2.value = health_2.health * 100 / health_2.max_health 
		label_2.text = str(health_2.health) +\"/\"+ str(health_2.max_health)


func _base_update():
	base_label.text = \"base health:\" + str(game_manager.base_health) +\"/\"+ str(game_manager.base_max_health)

func _gold_update():
	gold_label.text = \"gold:\" + str(game_manager.gold)

func _on_win():
	win_label.show()
	await get_tree().create_timer(20).timeout
	win_label.hide()

func _on_slime_wave():
	wave_label.show()
	await get_tree().create_timer(5).timeout
	wave_label.hide()
"

